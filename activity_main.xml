<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/buttonProgress"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="71dp"
        android:background="@color/colorPrimaryDark"
        android:padding="10pt"
        android:text="Progress Dialog"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/buttonList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorPrimaryDark"
        android:padding="10pt"
        android:text="List Alert"
        android:textColor="#ffffff"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonSimple"
        app:layout_constraintEnd_toStartOf="@+id/buttonSimple"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSimple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="199dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorPrimaryDark"
        android:padding="10pt"
        android:text="Simple Alert"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonList" />

</android.support.constraint.ConstraintLayout>
